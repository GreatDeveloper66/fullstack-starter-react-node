{
  "name": "fullstack-starter-react-node",
  "version": "2.1.0",
  "main": "index.js",
  "type": "module",
  "proxy": "http://localhost:5000",
  "scripts": {
    "test": "jest -c test.config.mjs",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.backend.mjs",
    "test:frontend": "cd frontend && npm test",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "npm install",
    "heroku-postbuild": "npm run build",
    "dev": "concurrently \"nodemon server.js\" \"cd frontend && npm start\"",
    "start": "node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "nodemailer": "^7.0.10",
    "twilio": "^5.10.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "baseline-browser-mapping": "^2.9.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
